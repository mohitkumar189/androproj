<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="in.visheshagya.visheshagya.activities.AppointmentDetailsActivity">

    <RelativeLayout
        android:id="@+id/appointTitles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/expertName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Expert Name" />

        <TextView
            android:id="@+id/appointTiming"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/expertName"
            android:gravity="center"
            android:padding="5dp"
            android:text="Appointment \nTiming" />

        <TextView
            android:id="@+id/consType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/appointTiming"
            android:gravity="center"
            android:padding="5dp"
            android:text="Consultation \nType" />

        <TextView
            android:id="@+id/appointStatus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/consType"
            android:gravity="center"
            android:padding="5dp"
            android:text="Status" />

        <TextView
            android:id="@+id/appointAction"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/appointStatus"
            android:gravity="center"
            android:padding="5dp"
            android:text="Action"
            android:visibility="gone" />

    </RelativeLayout>

</LinearLayout>
