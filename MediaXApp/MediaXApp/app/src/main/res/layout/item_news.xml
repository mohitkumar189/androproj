<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/containerNewsDetails"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="@dimen/margin_large"
              android:orientation="horizontal">


    <com.mediax.mediaxapp.widgets.CircularImageView
        android:id="@+id/imageNews"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/font_small"
            android:text="Sample News Title"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_large"/>

        <TextView
            android:id="@+id/textNewsDescription"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/textJobs"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="News Description"
            android:textSize="@dimen/font_large"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textNewsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/font_small"
            android:text="19/02/2016"
            android:textSize="@dimen/font_small"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/margin_medium"
            android:src="@drawable/icon_forward_arrow"/>

    </LinearLayout>


</LinearLayout>